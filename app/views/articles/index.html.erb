<div class="page_wrapper">
  <div class="header">
    <h1>Listing Articles</h1>
  </div>

  <%= link_to 'New article', new_article_path, class: "btn btn-outline-primary" %>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>
</div>

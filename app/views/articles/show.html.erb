<div class="page_wrapper">
  <div class="show_article">
    <p>
      <strong>Title:</strong>
      <%= @article.title %>
    </p>

    <p>
      <strong>Text:</strong>
      <%= @article.text %>
    </p>

    <h4>Comments</h4>
    <%= render @article.comments %>

    <h4>Add a comment:</h4>
    <%= render 'comments/form' %>

    <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-primary" %> |
    <%= link_to 'Back', articles_path, class:"btn btn-primary"  %>
  </div>
</div>
